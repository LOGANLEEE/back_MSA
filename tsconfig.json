{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "./build",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"baseUrl": ".",
		"paths": {
			"@router/*": ["./src/router/*"],
		}
	},
	"include": ["./src"],
	"exclude": ["./node_modules"]
}
